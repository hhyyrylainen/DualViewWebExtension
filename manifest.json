{
    
    "manifest_version": 2,
    "name": "Open In DualView++",
    "description": "Allows opening images in DualView++.",
    "version": "1.0.1",
    "default_locale": "en",
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "permissions": [
        "contextMenus",
        "nativeMessaging",
        "tabs"
    ],
    
    "icons": {
        "16": "icons/page-16.png",
        "32": "icons/page-32.png",
        "48": "icons/page-48.png"
    },

    "applications": {
        "gecko": {
            "id": "dualview.webextension@boostslair.com",
            "strict_min_version": "45.0"
        }
    }
}
